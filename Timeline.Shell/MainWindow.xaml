<Window x:Class="YL.Timeline.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:timeline="clr-namespace:YL.Timeline.Controls;assembly=YL.Timeline"
		xmlns:fields="clr-namespace:YL.Timeline.Controls.Fields;assembly=YL.Timeline"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<timeline:TimeLine Grid.Row="0" Items="{Binding Items}" SelectedRecords="{Binding SelectedRecords, Mode = TwoWay}"></timeline:TimeLine>
		<fields:ControlRevisionsView Grid.Row="1" ItemsSource="{Binding SelectedRecords}" fields:ControlRevisionView.InfoLoaderCommand="{Binding LoadInfoCommand}" ></fields:ControlRevisionsView>
	</Grid>
</Window>
